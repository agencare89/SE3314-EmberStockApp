<br>
<div class = "container">
      <div class = "navbar navbar-default">
          <div class = "container">
              <ul class = "nav navbar-nav">
                  <li class = 'active' id = "most"><a onClick = 'func1();' href = "#" {{action 'sortBy' 'mostVolume'}}>Most Active By Volume</a></li>
                  <li id = "gain"><a onClick = 'func2();' href = "#" {{action 'sortBy' 'gainers'}}>Gainers</a></li>
                  <li id = "lose"><a onClick = 'func3();' href = "#" {{action 'sortBy' 'losers'}}>Losers</a></li>
              </ul>
          </div>
      </div>
    <table class = "table table-striped table-bordered table-hover" >
        <thead>
            <tr>
                <th style = "text-align:center;">Company</th>
                <th style = "text-align:center;">Open Price</th>
                <th style = "text-align:center;">Last Sale</th>
                <th style = "text-align:center;" colspan = "3">Change</th>
                <th style = "text-align:center;">Share Volume</th>
                <th></th>
            </tr>
        </thead>
        <tbody data-link = "row" class = "rowlink">
        {{#each company in sortedCompanies}}
            <tr>
                <td style = "text-align:center;">{{#link-to 'marketByOrder' company.id}}{{company.name}}{{/link-to}}</td>
                <td style = "text-align:center;">{{company.openPrice}}</td>
                <td style = "text-align:center;">{{company.lastSale}}</td>
                <td style = "text-align:center;">{{company.netChange}}</td>
                <td style = "text-align:center;"><img {{bindAttr src = "company.changePic"}}></td>
                <td style = "text-align:center;">{{company.percentChange}}%</td>
                <td style = "text-align:center;">{{company.volume}}</td>
                <td style = "text-align:center;">
                    {{#link-to 'placeBidOrder' company.id}}<button type="button" class="btn btn-info">Buy</button>{{/link-to}}
                    {{#link-to 'placeSaleOrder' company.id}}<button type="button" class="btn btn-info">Sell</button>{{/link-to}}
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    <br>
    {{outlet}}
</div>
