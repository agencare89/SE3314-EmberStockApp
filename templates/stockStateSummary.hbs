<div class = "container">
      <div class = "navbar navbar-default">
          <div class = "container">
              <ul class = "nav navbar-nav">
                  <li class="active"><a href="#">Most Active By Volume<span class="sr-only">(current)</span></a></li>
                  <li><a href="#">Gainers</a></li>
                  <li><a href = "#">Losers</a></li>
              </ul>
          </div>
      </div>
    <table class = "table table-striped table-bordered table-hover" >
        <thead>
            <tr>
                <th style = "text-align:center;">Company</th>
                <th style = "text-align:center;">Open Price</th>
                <th style = "text-align:center;">Last Sale</th>
                <th style = "text-align:center;" colspan = "3">Change</th>
                <th style = "text-align:center;">Share Volume</th>
                <th></th>
            </tr>
        </thead>
        <tbody data-link = "row" class = "rowlink">
        {{#each company in model}}
            <tr>
                <td>{{#link-to 'marketByOrder' company.id}}{{company.name}}{{/link-to}}</td>
                <td>{{company.openPrice}}</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td style = "text-align:center;">
                    {{#link-to 'placeBidOrder' company.id}}<button type="button" class="btn btn-info">Buy</button>{{/link-to}}
                    {{#link-to 'placeSaleOrder' company.id}}<button type="button" class="btn btn-info">Sell</button>{{/link-to}}
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    <br>
    {{outlet}}
</div>
